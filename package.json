{
  "name": "spinbook",
  "version": "1.0.0",
  "description": "SpinBook: Advanced booking system for recording studios with real-time conflict prevention and Google Calendar integration",
  "main": "public/index.html",
  "type": "module",
  "scripts": {
    "start": "vercel dev",
    "dev": "vercel dev",
    "build": "echo 'SpinBook is a static site with serverless functions - no build step required'",
    "deploy": "vercel --prod",
    "test": "echo 'No tests specified yet'",
    "lint": "echo 'Linting would go here'",
    "validate-config": "node -e \"import('./_utils.js').then(m => m.validateConfiguration().then(() => console.log('✅ Configuration valid')).catch(e => console.error('❌ Configuration invalid:', e.message)))\""
  },
  "keywords": [
    "booking-system",
    "recording-studio",
    "google-calendar",
    "reservation",
    "music-studio",
    "calendar-integration",
    "conflict-prevention",
    "real-time-booking",
    "vercel",
    "serverless"
  ],
  "author": {
    "name": "SpinBook - Beraka Studio",
    "email": "hola@beraka.cl",
    "url": "https://beraka.cl"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "googleapis": "^142.0.0"
  },
  "devDependencies": {
    "vercel": "^33.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berakastudio/spinbook.git"
  },
  "bugs": {
    "url": "https://github.com/berakastudio/spinbook/issues"
  },
  "homepage": "https://github.com/berakastudio/spinbook#readme",
  "vercel": {
    "outputDirectory": ".",
    "functions": {
      "api/create-event.js": {
        "maxDuration": 30
      },
      "api/get-events.js": {
        "maxDuration": 10
      }
    }
  },
  "config": {
    "studio": {
      "name": "DJ SDC Producciones",
      "businessHours": {
        "start": 9,
        "end": 21
      },
      "timezone": "America/Santiago",
      "services": [
        "Grabación profesional",
        "Producción musical", 
        "Mezcla y mastering"
      ]
    },
    "features": {
      "conflictPrevention": true,
      "realTimeUpdates": true,
      "pdfGeneration": true,
      "detailedLogging": true,
      "advancedValidation": true
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}